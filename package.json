{
  "name": "@thxgg/steward",
  "version": "0.1.6",
  "description": "Local-first PRD workflow steward with codemode MCP and web UI.",
  "type": "module",
  "author": "thxgg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thxgg/steward.git"
  },
  "bugs": {
    "url": "https://github.com/thxgg/steward/issues"
  },
  "homepage": "https://github.com/thxgg/steward#readme",
  "keywords": [
    "prd",
    "mcp",
    "workflow",
    "nuxt",
    "sqlite",
    "developer-tools"
  ],
  "engines": {
    "node": ">=22.6.0",
    "npm": ">=10"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "bin": {
    "prd": "./bin/prd"
  },
  "files": [
    "bin/",
    "dist/",
    ".output/",
    "docs/MCP.md",
    ".env.example",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:host && nuxt build",
    "build:host": "tsc -p tsconfig.host.build.json",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "mcp": "npm run build:host && node ./bin/prd mcp",
    "ui": "npm run build && node ./bin/prd ui",
    "typecheck": "nuxt typecheck && npm run typecheck:host",
    "typecheck:host": "tsc -p tsconfig.host.json",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@vueuse/core": "^14.1.0",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "defu": "^6.1.4",
    "devalue": "^5.4.2",
    "dompurify": "^3.3.1",
    "lucide-vue-next": "^0.563.0",
    "marked": "^17.0.1",
    "perfect-debounce": "^2.0.0",
    "reka-ui": "^2.7.0",
    "shiki": "^3.21.0",
    "tailwind-merge": "^3.4.0",
    "ufo": "^1.6.0",
    "unhead": "^2.1.4",
    "vue": "latest",
    "vue-bundle-renderer": "^2.1.0",
    "vue-router": "^4.5.0",
    "vue-sonner": "^1.3.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nuxtjs/color-mode": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.0.10",
    "nuxt": "^3.21.0",
    "tailwindcss": "^4.0.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vue-tsc": "^3.2.3"
  }
}
